<Fluent:RibbonWindow x:Class="WpfApp2.MainWindow"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:Fluent="clr-namespace:Fluent;assembly=Fluent"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:uc="clr-namespace:WpfApp2"
                     x:Name="window"
                     Width="1024"
                     Height="768"
                     MinWidth="80"                     
                     MinHeight="60"
                     FlowDirection="LeftToRight"
                     WindowState="Normal"
                     mc:Ignorable="d">
    <Fluent:Ribbon x:Name="ribbon">
        <Fluent:Ribbon.Menu>
            <Fluent:ApplicationMenu x:Name="ApplicationMenu"/>
        </Fluent:Ribbon.Menu>
        <Fluent:RibbonTabItem Header="Home" Height="Auto">
            <Fluent:RibbonGroupBox>
                <Fluent:Button Click="Button_Click" Content="test">

                </Fluent:Button>
            </Fluent:RibbonGroupBox>
        </Fluent:RibbonTabItem>
    </Fluent:Ribbon>
    <!--<uc:UserControl1 />-->
</Fluent:RibbonWindow>